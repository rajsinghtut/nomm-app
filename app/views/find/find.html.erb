<div class="row">
	<div class="col-md-4 col-md-offset-4 location_text">San Francisco,CA</div>
	<div class="col-md-4 col-md-offset-4 location_subtext">Noms found near you!</div>
</div>
<% x=0 %>
<% @sorted_posts.each do |p| %>
	<div class="row">
		<div class="row-inner-not-used">
			<div class="post_subtext"><%= time_ago_in_words(p.created_at)%> ago </div>
			<% if p.picture.url(:cropped)%>
				<div align="center"><%= image_tag p.picture.url(:cropped), :class=>"picture" %></div>
			<% else %>
				<div align="center"><img src="http://placehold.it/300x300" class="picture" ></div>
			<% end %>
			
			<div class="post_description"><%= p.location %><br>
				<a href="/posts/<%=p.id%>" class="btn btn-large" id="button">Details</a>
			</div>
		</div>
	</div>
<% x+=1 %>
	<br>
<%end%>

<div class="row">
	<div class="col-md-4 col-md-offset-4 location_text">San Francisco,CA</div>
	<div class="col-md-4 col-md-offset-4 location_subtext">Noms found near you!</div>
</div>
<% x=0 %>
<% @sorted_posts.each do |p| %>
	<div class="row">
		<div class="col-md-4 col-md-offset-4 post_subtext"><%= time_ago_in_words(p.created_at)%>   <%= @current_distance[x] %>  distance </div>
	</div>
	<div class="row">
		<% if p.picture.url(:cropped)%>
			<div align="center"><%= image_tag p.picture.url(:cropped) %></div>
		<% else %>
			<div align="center"><img src="http://placehold.it/300x300"></div>
		<% end %>
		<div class="post_description"><%= p.description %></div>
	</div>
	<div class="row">
		<div class="col-md-2 col-md-offset-5 btn btn-large btn-success" align="center"><%= link_to "Details", posts_path %></div>
	</div>
<% x+=1 %>
	<br>
<%end%>
